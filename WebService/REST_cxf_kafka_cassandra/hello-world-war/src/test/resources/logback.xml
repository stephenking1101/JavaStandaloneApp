<configuration debug="true" scan="true">
    <appender name="STDOUT" class="repackaged.ch.qos.logback.core.ConsoleAppender">
        <encoder class="repackaged.ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %X{logtraceid} %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.cassandra" additivity="false" level="INFO">
         <appender-ref ref="STDOUT"/>
    </logger>
   

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
